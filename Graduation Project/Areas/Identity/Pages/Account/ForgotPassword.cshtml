@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="mt-5 mb-4" style="color: #417690;">@ViewData["Title"]</h1>
<h2 class="mb-4" style="color: #417690;">Enter your email.</h2>
<hr />
<div class="row mb-5">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input style="color: #417690;" asp-for="Input.Email" class="form-control bottom-border" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button style="background-color:#417690; color: white;" type="submit" class="w-100 btn btn-lg mb-3">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
