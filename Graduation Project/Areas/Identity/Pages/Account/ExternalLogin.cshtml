@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="mt-5 mb-3" style="color: #417690;">@ViewData["Title"]</h1>
<h2 id="external-login-title" style="color: #417690;">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-warning mb-5">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row mb-5">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input style="color: #417690;" asp-for="Input.Email" class="form-control bottom-border" autocomplete="email" placeholder="Please enter your email." />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input style="color: #417690;" asp-for="Input.Name" class="form-control bottom-border" placeholder="Please enter your Name." />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <button style="background-color:#417690; color: white;" type="submit" class="w-100 btn btn-lg mb-3">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
