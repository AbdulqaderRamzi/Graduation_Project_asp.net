@model Applicant

<form method="post" asp-action="ApplyTojob" enctype="multipart/form-data" class="mt-5 mb-5 col-9" style="margin-right:auto; margin-left: auto;">
    <div class="border-b p-3 mt-4" style="background:white;">
        <div class="row pb-2">
            <h1 class="mt-3 mb-4 text-center" style="color: #417690;">Upload Your CV</h1>
            <hr />
        </div>
        <div>
            <h4 class="mt-3 mb-4 text-muted text-center" >Become supporter with us</h4>
        </div>
        <div class="mb-3 mx-5">
            <label for="CV"></label>
            <input type="file" name="CV" class="textarea-border form-control mb-2" style="color: #417690;" />
            <p class="text-danger mt-2 text-start">@ViewBag.CVError</p>
        </div>
        <div class="d-flex justify-content-center custom-opacity">
            <button style="background-color:#417690; color: white;" type="submit" class="btn mb-3 mt-4 py-2 px-5">
                Submit
            </button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}