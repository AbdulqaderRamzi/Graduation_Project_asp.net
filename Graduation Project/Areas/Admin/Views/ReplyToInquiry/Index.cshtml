@model List<Inquiry>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Inquiries</h2>
        </div>
    </div>
    <br />
    <h1>
        <a asp-action="Index">
            All
        </a>
    </h1>
    <h1>
        <a asp-action="Index" asp-route-unreplied=true>
            Unreplied
        </a>
    </h1>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Type
                </th>
                <th>
                    User
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderByDescending(i => i.CreatedAt))
            {
                <tr>
                    <td>
                        @obj.Type
                    </td>
                    <td>
                        @obj.User.Name
                    </td>
                    @if (obj.Reply == false)
                    {
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-id=@obj.Id asp-action="Reply"
                                   class="btn btn-primary mx-2">
                                    <i class="bi bi-reply"></i>Reply
                                </a>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td class="text-success">
                            Replied
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>