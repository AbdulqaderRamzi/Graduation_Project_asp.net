@model List<User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(i => i.Role))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Role
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-route-admin="true" asp-controller="User" asp-action="UserRole"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Admin
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-route-supporter="true" asp-controller="User" asp-action="UserRole"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Supporter
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-route-learner="true" asp-controller="User" asp-action="UserRole" class="btn btn-success mx-2">
                                <i class="bi"></i>Learner
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>