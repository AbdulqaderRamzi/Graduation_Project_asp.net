    <h2 class="my-5 custom-title">Install the package</h2>
    <div class="mt-4"></div>
    <pre class="mb-5">
        <code class="language-Django">
            pip install django-jazzmin
            <span></span>
        </code>
    </pre>
    <hr />
    <h4 class="mb-4 mt-5">Insert the package into INSTALLED_APPS list.</h4>
    <div class="mt-2"></div>
    <pre class="mb-2">
        <code class="language-Django">
            INSTALLED_APPS = [
                'jazzmin',
                'django.contrib.admin',
                ...
            ]
            <span></span>
        </code>
    </pre>
